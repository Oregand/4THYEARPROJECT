<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/SingleTitle"
        android:id="@+id/sc_title"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/SingleLink"
        android:id="@+id/sc_link"
        android:autoLink="web"
        android:layout_weight="0.41"/>
    <!--android:autoLink="web"-->


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.79">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/SingleaSKING"
            android:id="@+id/sc_asking"
            android:layout_weight="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/SinglePredicted"
            android:id="@+id/sc_PP"
            android:layout_weight="1.5" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/SingleLocation"
            android:id="@+id/sc_location"
            android:layout_weight="3.02" />
    </LinearLayout>

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/sc_webView"
        android:layout_weight="6" />

</LinearLayout>